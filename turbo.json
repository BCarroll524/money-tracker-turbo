{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "public/dist/**"],
      "env": ["NODE_ENV"]
    },
    "remix-app#build": {
      "dependsOn": ["^build"],
      "outputs": ["api/index.js", "api/build/**", "public/build/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  },
  "globalEnv": ["NODE_ENV"]
}
